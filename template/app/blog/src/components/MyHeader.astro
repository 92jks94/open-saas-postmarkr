---
import { logos } from 'virtual:starlight/user-images';
import config from 'virtual:starlight/user-config';
import blogConfig from 'virtual:starlight-blog-config'
import type { Props } from '@astrojs/starlight/props';

const appUrl = 'https://postmarkr.com';
const { siteTitle } = Astro.props;
---
<div class="unified-header-container">
  <a href={appUrl} class="site-title sl-flex">
    {
      config.logo && logos.dark && (
        <>
          <img
            class:list={{ 'light:sl-hidden': !('src' in config.logo) }}
            alt={config.logo.alt}
            src={logos.dark.src}
            width={logos.dark.width}
            height={logos.dark.height}
          />
          {/* Show light alternate if a user configure both light and dark logos. */}
          {!('src' in config.logo) && (
            <img
              class="dark:sl-hidden"
              alt={config.logo.alt}
              src={logos.light?.src}
              width={logos.light?.width}
              height={logos.light?.height}
            />
          )}
        </>
      )
    }
    <span class:list={{ 'sr-only': config.logo?.replacesTitle }} class="logo-text">
      {siteTitle}
    </span>
  </a>
  
  <nav class="blog-nav">
    <a href={`${appUrl}/#features`} class="nav-link">Features</a>
    <a href={`${appUrl}/pricing`} class="nav-link">Pricing</a>
    <a href="/blog/" class="nav-link active">Blog</a>
    <a href={`${appUrl}/login`} class="nav-link cta-link">Sign In</a>
  </nav>
</div>

<style>
  .unified-header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    gap: 2rem;
  }

	.site-title {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--sl-color-text);
		font-size: var(--sl-text-h4);
		font-weight: 600;
		text-decoration: none;
		white-space: nowrap;
    transition: color 0.2s ease;
	}

  .site-title:hover {
    color: var(--sl-color-text-accent);
  }

  .logo-text {
    font-weight: 600;
    color: var(--sl-color-text);
  }

	img {
		height: 2rem;
		width: auto;
		max-width: 100%;
		object-fit: contain;
		object-position: 0 50%;
	}

  .blog-nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: var(--sl-color-text);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--sl-color-text-accent);
  }

  .cta-link {
    padding: 0.5rem 1rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .cta-link:hover {
    background-color: var(--sl-color-gray-6);
    border-color: var(--sl-color-text-accent);
  }

  @media (max-width: 50rem) {
    .unified-header-container {
      flex-direction: column;
      gap: 1rem;
      padding: 0.5rem 0;
    }

    .blog-nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }
  }
</style>
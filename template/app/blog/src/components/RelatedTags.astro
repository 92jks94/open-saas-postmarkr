---
// Component to display related tags on blog posts
// This improves internal linking to tag pages
interface Props {
  tags?: string[];
}

const { tags = [] } = Astro.props;
---

{tags && tags.length > 0 && (
  <div class="related-tags my-6 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">
      Related Topics:
    </h3>
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <a
          href={`/blog/tags/${tag}/`}
          class="inline-block px-3 py-1 text-sm bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 rounded-full border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-blue-900 hover:border-blue-400 transition-colors"
          rel="tag"
        >
          {tag}
        </a>
      ))}
    </div>
  </div>
)}

<style>
  .related-tags a {
    text-decoration: none;
  }
  
  .related-tags a:hover {
    text-decoration: none;
  }
</style>


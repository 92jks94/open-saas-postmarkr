# NPM Configuration with Retry Logic
# This helps with transient network issues during builds

# Retry settings - retry failed downloads up to 5 times
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Timeout settings - increase timeouts for slow connections
fetch-timeout=300000

# Registry settings - use a fallback registry if primary fails
# registry=https://registry.npmjs.org/

# Logging - useful for debugging
loglevel=warn

# Cache settings - help reduce network requests
prefer-offline=false
prefer-online=true

# Network settings
maxsockets=20

